<%= stylesheet_link_tag 'style.css' %>
<%= audio_tag "beepone.mp3", class: "audio-play" %>


<div class="showPage">
  <h1 class="text-center">Chat Room</h1>
  <div id="chatbox" class="pre-scrollable chatbox">
    <div id="messages">
      <%= render @messages %>
    </div>
  </div>

  <form>
    <input id="chat-input" class="form-control text-left" type="text" data-behavior="room_speaker" placeholder="Say something ...">
  </form>


</div>
<%= javascript_include_tag('chatscroller') %>